<%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages' %>

      <%= f.label :name, 'Nombre' %>
      <%= f.text_field :name %>

      <%= f.label :name, 'Apellido' %>
      <%= f.text_field :surname %>

      <%if current_user==nil %>
      <%= f.label :email, 'E-Mail' %>
      <%= f.text_field :email %>
      <% end %>

      <%= f.label :password, 'Contrase침a' %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Confirmaci칩n de contrase침a" %>
      <%= f.password_field :password_confirmation %>

      <br><br>
      <h3>Fecha de Nacimiento</h3>
      <br>
      <div class="fecha">
       <%= f.date_select :birth,
        {:start_year => Time.now.year-18,
        :end_year => 1900,
        :use_month_numbers => true,
        :order => [:day, :month, :year],
        :prompt => {:month => 'Mes', :day => 'Dia', :year => 'A침o'}},
        {:class => 'year',
        :id => 'birth'}%>
      </div>
      <br>
      <h3>Pais</h3>
      <br>
      <%= f.collection_select(:country_id, Country.find(:all), :id, :name) %>

      <br><br>
      <h3>Sexo</h3>
      <br>
      <label class="radio">
      <%= f.radio_button :sex, "M" %>
      <%= f.label :sex, "Masculino" %>

      <%= f.radio_button :sex, "F" %>
      <%= f.label :sex, "Femenino" %>
      </label>

        <br><br>
        <h3>Experiencias</h3>
        <br>
        <%= f.fields_for :area_users do |ff|%>
        <div class="span2">
          <label class="checkbox inline">
            <p>
            <%= ff.check_box :_destroy, 
                {checked: ff.object.persisted?},'0','1'%>
                <%= ff.label :_destroy, ff.object.area.name %>
            <%= ff.hidden_field :area_id %>
            </p>
          </label>
        </div>
        <%end%>
        <div class="span2">
        <br>
        <br>
        <br>
      <%if @user==current_user%>
      <%= f.submit "Cambiar mis datos", class: "btn btn-large btn-primary" %>
      <%else%>
      <%= f.submit "Crear mi cuenta", class: "btn btn-large btn-primary" %>
      <%end%>
    </div>
    <% end %>