<% provide(:title, 'Haz una Pregunta') %>
<h1>Haz una Pregunta!</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for([current_user, @question]) do |f| %>
      <%= render 'shared/question_error_messages', object: f.object %>

      <%= f.label :title, 'Titulo' %>
      <%= f.text_field :title %>

      <%= f.text_area :content, placeholder: "Contenido..." %>
      <br>
      <h3>Área de Experiencia</h3>
      <br>
      <%= f.collection_select(:area_id, Area.find(:all), :id, :name) %>

      <%= f.submit "Preguntar", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>